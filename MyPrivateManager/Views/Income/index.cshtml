@{
    ViewData["Title"] = "Incomes";
}

<header>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <link href="~/img/favicon.png" rel="icon">
    <link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link
        href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
        rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/vendor/simple-datatables/style.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</header>
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Income</h1>
        <nav>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="">Home</a></li>
                <li class="breadcrumb-item">Income</li>
            </ul>
        </nav>
    </div>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <ul class="nav nav-tabs d-flex" id="myTabJustify" role="tablist">
                            <li class="nav-item flex-fill" role="presentation">
                                <button class="nav-link w-100 active" id="income-tab" data-bs-toggle="tab" type="button"
                                    role="tab" data-bs-target="#income-content" aria-selected="true">Income</button>
                            </li>
                            <li class="nav-item flex-fill" role="presentation">
                                <button class="nav-link w-100" id="source-tab" data-bs-toggle="tab" type="button"
                                    role="tab" data-bs-target="#source-content" aria-selected="false">Source</button>
                            </li>
                        </ul>
                        <div class="tab-content pt-2" id="myIncomeTab" role="tabpanel">
                            <div class="tab-pane fade show active" id="income-content">
                                <button class="btn btn-primary" onclick="addIncome()">
                                    <i class="bi bi-journal-plus"></i> Create New Income
                                </button>
                                <h5 class="card-title">Income</h5>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Description</th>
                                                <th scope="col">Source</th>
                                                <th scope="col">Amount</th>
                                                <th scope="col">Date Time</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (ViewBag.Incomes != null)
                                            {
                                                @foreach (var income in ViewBag.Incomes)
                                                {
                                                    <tr>
                                                        <td scope="row">@income.IncomeId</td>
                                                        <td>@income.Description</td>
                                                        <td>@income.Income.Source.SourceName</td>
                                                        <td>@income.Amount</td>
                                                        <td>@income.Date</td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="5">No data</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="source-content">
                                <button class="btn btn-primary my-2" onclick="addSource()" data-bs-toggle="modal">
                                    <i class="bi bi-journal-plus"></i> Create New Source
                                </button>
                                <h5 class="card-title">Source</h5>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Source Name</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (ViewBag.Sources != null)
                                            {
                                                @foreach (var source in ViewBag.Sources)
                                                {
                                                    <tr>
                                                        <td scope="row">@source.SourceId</td>
                                                        <td>@source.SourceName</td>
                                                        <td>
                                                            <button data-bs-toggle="modal"
                                                                onclick="editSource(@source.SourceId)">Edit</button>
                                                            <button data-bs-toggle="modal"
                                                                onclick="deleteSource(@source.SourceId)">Delete</button>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="2">No data</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<div class="modal fade" id="incomeModal" tabindex="-1" aria-labelledby="incomeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="incomeModalLabel">Income Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form untuk tambah/edit data -->
                <!-- Anda dapat menyesuaikan form ini sesuai dengan kebutuhan Anda -->
                <form id="incomeForm">
                    <div class="mb-3">
                        <label for="amount">Amount</label>
                        <input type="text" class="form-control" id="amount" placeholder="Enter amount">
                    </div>
                    <div class="mb-3">
                        <label for="source">Source</label>
                        <input type="text" class="form-control" id="source" placeholder="Enter source">
                    </div>
                    <div class="mb-3">
                        <label for="date">Date</label>
                        <input type="date" class="form-control" id="date">
                    </div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="saveIncome()">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="createSourceModal" tabindex="-1" role="dialog" aria-labelledby="createSourceModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createSourceModalLabel">Add Source</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createSourceForm">
                    <div class="form-group">
                        <label for="createSourceName">Source Name</label>
                        <input type="text" class="form-control" id="createSourceName" name="SourceName" required />
                    </div>
                    <button type="button" class="btn btn-primary" onclick="createSource()">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editSourceModal" tabindex="-1" role="dialog" aria-labelledby="editSourceModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editSourceModalLabel">Edit Source</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editSourceForm">
                    <div class="form-group">
                        <label for="editSourceId">Source Id</label>
                        <input type="text" class="form-control" id="editSourceId" name="SourceId" readonly />
                    </div>
                    <div class="form-group">
                        <label for="editSourceName">Source Name</label>
                        <input type="text" class="form-control" id="editSourceName" name="SourceName" required />
                    </div>
                    <button type="button" class="btn btn-primary" onclick="updateSource()">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function addIncome() {
        // Menampilkan modal tambah data
        $('#incomeModalLabel').text('Add Income');
        $('#amount').val('');
        $('#source').val('');
        $('#date').val('');
        $('#incomeModal').modal('show');
    }
    function editIncome(incomeId) {
        // Logika untuk mengisi data dalam form edit
        // Anda dapat mengganti logika ini sesuai dengan kebutuhan
        $.ajax({
            url: '/Income/GetIncomeById/' + incomeId,
            type: 'GET',
            success: function (data) {
                $('#incomeModalLabel').text('Edit Income');
                $('#amount').val(data.Amount);
                $('#source').val(data.Source);
                $('#date').val(data.Date);
                $('#incomeModal').modal('show');
            },
            error: function () {
                console.error('Failed to fetch income details');
            }
        });
    }

    function saveIncome() {
        // Logika untuk menyimpan data
        // Anda dapat mengganti logika ini sesuai dengan kebutuhan
        var amount = $('#amount').val();
        var source = $('#source').val();
        var date = $('#date').val();

        // Validasi input
        if (!amount || !source || !date) {
            alert('Please fill in all fields');
            return;
        }

        // Ajax request untuk menyimpan data
        $.ajax({
            url: '/Income/SaveIncome',
            type: 'POST',
            data: { Amount: amount, Source: source, Date: date },
            success: function () {
                // Refresh halaman atau perbarui tabel dengan data yang baru
                location.reload();
            },
            error: function () {
                console.error('Failed to save income');
            }
        });

        // Menutup modal setelah menyimpan
        $('#incomeModal').modal('hide');
    }
</script>
<script>
    function addSource() {
        $('#createSourceModalLabel').text('Add Source');
        $('#createSourceName').val('');
        $('#createSourceModal').modal('show');
    }

    function editSource(sourceId) {
        $.ajax({
            url: '/Source/GetSource/' + sourceId,
            type: 'GET',
            success: function (data) {
                $('#editSourceModalLabel').text('Edit Source');
                $('#editSourceId').val(data.sourceId);
                $('#editSourceName').val(data.sourceName);
                $('#editSourceModal').modal('show');
            },
            error: function () {
                console.error('Failed to fetch source details');
            }
        });
    }
    function createSource() {
        var sourceData = {
            SourceName: $('#createSourceName').val()
        };
        $.ajax({
            url: '/Source/CreateSource',
            type: 'POST',
            data: sourceData,
            success: function () {
                $('#createSourceModal').modal('hide');
                location.reload();
            },
            error: function () {
                console.error('Failed to save source');
            }
        });
    }
    function updateSource() {
        var sourceId = $('#editSourceId').val();
        var sourceData = {
            SourceName: $('#editSourceName').val()
        };
        $.ajax({
            url: '/Source/UpdateSource/' + sourceId,
            type: 'POST',
            data: sourceData,
            success: function () {
                $('#editSourceModal').modal('hide');
                location.reload();
            },
            error: function () {
                console.error('Something went wrong');
            }
        });
    }
    function deleteSource(sourceId) {
        var isConfirmed = confirm('are you sure you want to delete this source?');
        if (isConfirmed) {
            $.ajax({
                url: '/Source/DeleteSource/' + sourceId,
                type: 'DELETE',
                success: function () {
                    location.reload();
                },
                error: function () {
                    console.error('Failed to delete source');
                }
            });
        }
    }
</script>